    script(src='/js/jquery.serializejson.js')
    script.
        const container = document.getElementById("jsoneditor")
        const options = {onChangeText: jsonText => {
            const json = JSON.parse(jsonText)
            console.log('updated json', json)
          $.ajax({
                type:'POST',
                url:'http://localhost:8082/api/savechannels',
                data: {guildID: '#{guildID}', events: json},
                error:function (msg) {
                  alert('There was an error while syncing dashboard changes with the bot! View console for more information.')
                  console.error(msg)
                }
            })
        }, mode: 'text'}
        const editor = new JSONEditor(container, options)

        // set json
        const initialJson = {
            "loading": "true"
        }
        editor.set(initialJson)

        async function fetchInitialPage() {
                let activeServers = []
                try {
                    const resp = await fetch('http://localhost:8082/api/server/#{guildID}')
                    const data = await resp.json()
                    editor.set(data)
                    console.log('returned data', data)
                } catch (e) {
                    console.error(e)
                    alert('Error fetching bot servers.')
                }
                try {
                    const resp = await fetch('http://localhost:8082/api/botinfo')
                    const data = await resp.json()
                    console.log('returned data', data)
                    console.log('setting to ', data.username)
                    document.getElementById('botname').innerHTML = data.username
                    document.getElementById('botavatar').src = data.avatarURL
                    const botInvs = document.getElementsByClassName('botinvite')
                    for (let i = 0; i < botInvs.length; i++) {
                      botInvs[i].href = `https://discord.com/oauth2/authorize?client_id=${data.id}&scope=bot&permissions=536988833`
                    }
                } catch (e) {
                    console.error(e)
                    alert('Error fetching bot servers.')
                }
            }

            function getFormData($form){
              var unindexed_array = $form.serializeArray();
              var indexed_array = {};

              $.map(unindexed_array, function(n, i){
                  indexed_array[n['name']] = n['value'];
              });

              return indexed_array;
            }

            $("#submitchannels").click(function () {
              console.log('click')
              console.log($("#dataform"))
              const formData = getFormData($("#dataform"))
              delete formData.guildID
          $.ajax({
                type:'POST',
                url:'http://localhost:8082/api/savechannels',
                data: {guildID: '#{guildID}', events: formData},
                error:function (msg) {
                  alert('There was an error while syncing dashboard changes with the bot! View console for more information.')
                  console.error(msg)
                },
                success: function() {
                  message.innerHTML = 'Your changes have been saved.'
                  modal.style.display = 'block'
                }
            })
        })

        // get json
        const updatedJson = editor.get()
        let modal = document.getElementById('popup')
        let span = document.getElementById('close')
        let message = document.getElementById('message-content')
        let btn = document.getElementById('submitB')
        modal.style.display = "none";
        function hidePopup() {
          modal.style.display = "none"
        }
        span.onclick = hidePopup
        window.onclick = function(event) {
            if (event.target == modal) {
                hidePopup()
            }
        }

